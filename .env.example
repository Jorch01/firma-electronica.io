# Puerto del servidor
PORT=3000

# Entorno de ejecución
NODE_ENV=development

# Configuración de archivos temporales
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Límite de tamaño de archivo (en MB)
MAX_FILE_SIZE=50

# Tiempo de expiración de archivos temporales (en minutos)
TEMP_FILE_EXPIRY=30

# Configuración de CORS (separar con comas para múltiples orígenes)
CORS_ORIGIN=*

# Habilitar logs detallados
VERBOSE_LOGGING=false
